  <script>
    (() => {
      const progressBar = document.getElementById('progress-bar');
      const percentLabel = document.getElementById('percent');
      const loader = document.getElementById('loader');
      const startup = document.getElementById('startup');

      let progress = 0;
      let target = 0;

      const ease = (current, target, speed = 0.05) => current + (target - current) * speed;

      const animate = () => {
        if (target < 100) target += Math.random() * 2;
        progress = ease(progress, target);
        progress = Math.min(progress, 100);

        progressBar.style.width = `${progress}%`;
        percentLabel.textContent = `${Math.floor(progress)}%`;

        if (progress >= 99.9) {
          setTimeout(() => {
            loader.style.opacity = '0';
            setTimeout(() => {
              loader.remove();
              startup.style.display = 'flex';
              startup.style.opacity = '1';
            }, 600);
          }, 300);
        } else {
          requestAnimationFrame(animate);
        }
      };

      requestAnimationFrame(animate);
    })();
  </script>

